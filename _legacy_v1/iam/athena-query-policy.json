{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AthenaQueryExecution",
      "Effect": "Allow",
      "Action": [
        "athena:StartQueryExecution",
        "athena:GetQueryExecution",
        "athena:GetQueryResults",
        "athena:StopQueryExecution",
        "athena:GetWorkGroup"
      ],
      "Resource": [
        "arn:aws:athena:us-east-1:*:workgroup/ventureos-queries"
      ]
    },
    {
      "Sid": "GlueCatalogRead",
      "Effect": "Allow",
      "Action": [
        "glue:GetDatabase",
        "glue:GetTable",
        "glue:GetPartitions",
        "glue:GetPartition"
      ],
      "Resource": [
        "arn:aws:glue:us-east-1:*:catalog",
        "arn:aws:glue:us-east-1:*:database/ventureos_violations",
        "arn:aws:glue:us-east-1:*:table/ventureos_violations/*"
      ]
    },
    {
      "Sid": "ReadFromTableBucket",
      "Effect": "Allow",
      "Action": [
        "s3tables:GetTableBucket",
        "s3tables:GetTableObject"
      ],
      "Resource": [
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table",
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table/table/*"
      ]
    },
    {
      "Sid": "AthenaQueryResultsStorage",
      "Effect": "Allow",
      "Action": [
        "s3:GetBucketLocation",
        "s3:GetObject",
        "s3:ListBucket",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::sirsluginston-ventureos-data",
        "arn:aws:s3:::sirsluginston-ventureos-data/athena-query-results/*"
      ]
    },
    {
      "Sid": "CloudWatchLogging",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:us-east-1:*:log-group:/aws/lambda/lambda-athena-query*"
    }
  ]
}





