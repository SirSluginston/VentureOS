{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3TablesManagement",
      "Effect": "Allow",
      "Action": [
        "s3tables:CreateTableBucket",
        "s3tables:DeleteTableBucket",
        "s3tables:GetTableBucket",
        "s3tables:ListTableBuckets",
        "s3tables:CreateNamespace",
        "s3tables:DeleteNamespace",
        "s3tables:GetNamespace",
        "s3tables:ListNamespaces",
        "s3tables:CreateTable",
        "s3tables:DeleteTable",
        "s3tables:GetTable",
        "s3tables:ListTables",
        "s3tables:UpdateTableMetadataLocation",
        "s3tables:RenameTable"
      ],
      "Resource": [
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table",
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table/namespace/*",
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table/table/*"
      ]
    },
    {
      "Sid": "S3TablesDataAccess",
      "Effect": "Allow",
      "Action": [
        "s3tables:GetTableObject",
        "s3tables:PutTableObject",
        "s3tables:DeleteTableObject"
      ],
      "Resource": [
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table/table/*"
      ]
    },
    {
      "Sid": "S3TablesAnalyticsIntegration",
      "Effect": "Allow",
      "Action": [
        "s3tables:GetTableBucketPolicy",
        "s3tables:PutTableBucketPolicy"
      ],
      "Resource": [
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table"
      ]
    }
  ]
}


