{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BedrockBatchJobStatus",
      "Effect": "Allow",
      "Action": [
        "bedrock:GetModelInvocationJob"
      ],
      "Resource": "*"
    },
    {
      "Sid": "S3BatchOutputRead",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::sirsluginston-ventureos-data/bedrock-batches/output/*",
        "arn:aws:s3:::sirsluginston-ventureos-data"
      ]
    },
    {
      "Sid": "DynamoDBWrite",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:UpdateItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-1:611538926352:table/VentureOS-Violations",
        "arn:aws:dynamodb:us-east-1:611538926352:table/VentureOS-BedrockBatchJobs"
      ]
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:us-east-1:*:log-group:/aws/lambda/ventureos-bedrock-batch-result*"
    }
  ]
}

