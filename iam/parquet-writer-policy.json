{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ReadFromBronzeLayer",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::sirsluginston-ventureos-data",
        "arn:aws:s3:::sirsluginston-ventureos-data/bronze/*"
      ]
    },
    {
      "Sid": "WriteToTableBucket",
      "Effect": "Allow",
      "Action": [
        "s3tables:GetTableBucket",
        "s3tables:PutData",
        "s3tables:CreateTable",
        "s3tables:GetTableMetadataLocation",
        "s3tables:UpdateTableMetadataLocation",
        "s3tables:PutTableBucketPolicy"
      ],
      "Resource": [
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table",
        "arn:aws:s3tables:us-east-1:*:bucket/sirsluginston-ventureos-violations-table/table/*"
      ]
    },
    {
      "Sid": "GlueCatalogAccess",
      "Effect": "Allow",
      "Action": [
        "glue:GetDatabase",
        "glue:GetTable",
        "glue:GetPartitions",
        "glue:CreateTable",
        "glue:UpdateTable",
        "glue:BatchCreatePartition"
      ],
      "Resource": [
        "arn:aws:glue:us-east-1:*:catalog",
        "arn:aws:glue:us-east-1:*:database/ventureos_violations",
        "arn:aws:glue:us-east-1:*:table/ventureos_violations/*"
      ]
    },
    {
      "Sid": "CloudWatchLogging",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:us-east-1:*:log-group:/aws/lambda/lambda-batch-processor*"
    }
  ]
}


