{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBAccess",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:BatchGetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem"
            ],
            "Resource": [
                "arn:aws:dynamodb:us-east-1:611538926352:table/VentureOS-Projects",
                "arn:aws:dynamodb:us-east-1:611538926352:table/VentureOS-Entities",
                "arn:aws:dynamodb:us-east-1:611538926352:table/VentureOS-Violations",
                "arn:aws:dynamodb:us-east-1:611538926352:table/VentureOS-Violations/index/*",
                "arn:aws:dynamodb:us-east-1:611538926352:table/VentureOS-Entities/index/*"
            ]
        },
        {
            "Sid": "Logging",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:us-east-1:*:*"
        }
    ]
}



